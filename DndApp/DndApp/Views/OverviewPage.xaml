<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DndApp.Views.OverviewPage"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#090809">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="64"/>
                <RowDefinition Height="24"/>
                <RowDefinition Height="8"/>
                <RowDefinition Height="36"/>
                <RowDefinition Height="16"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <!--NAV BAR-->
            <Grid Grid.Row="0" ColumnSpacing="0">
                <!--Personally I think it's easier to use extra columns as margins, if they're a fixed value anyway-->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition />
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="24"/>
                </Grid.ColumnDefinitions>
                <BoxView BackgroundColor="#090809" Grid.ColumnSpan ="5" />
                <!--I use images instead of imagebuttons, because they have way less issues with positioning, you can add tapGestures instead of click events-->
                <Image x:Name="btnBack" Grid.Column="1" VerticalOptions="Center" HorizontalOptions="Center"/>
                <Label Text="Monsters" Grid.Column="2" TextColor="#F4F7FB" FontSize="20" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="Center"/>
                <Image x:Name="btnAdd" Grid.Column="3" VerticalOptions="Center" HorizontalOptions="Center"/>
            </Grid>
            <!--SORT MENU-->
            <Grid Grid.Row="1" ColumnSpacing="0" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width= "24"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label x:Name="lblSortBy" Text="Sort by: Name" Grid.Column="1" TextColor="#E40712" FontSize="16" FontAttributes="Bold" VerticalOptions="Center"/>
                <Image x:Name="btnDropDown" Grid.Column="2" Aspect="AspectFill" VerticalOptions="Center"/>
            </Grid>
            <!--SEARCH BAR (nice to have: change selection color entry and remove line underneath, might just use a rendered default <searchbar> if I find out how that works)-->
            <Grid Grid.Row="3" ColumnSpacing="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition />
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="24"/>
                </Grid.ColumnDefinitions>
                <BoxView Grid.Column="1" BackgroundColor="#293742" CornerRadius="5" Margin="8, 0, 0, 0"/>
                <SearchBar x:Name="entSearchBar" Grid.Column="1" TextColor="#F4F7FB" FontSize="14" BackgroundColor="Transparent" VerticalOptions="StartAndExpand"/>
                <Image x:Name="btnFilter" Grid.Column="3" VerticalOptions="Center" HorizontalOptions="Center"/>
            </Grid>
            <!--LIST VIEW (nice to have: loading indication)-->
            <ListView x:Name="lvwMonsters" Grid.Row="5" SeparatorColor="#293742" RowHeight="52" ItemSelected="MonsterSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid ColumnSpacing="0" Margin="32, 0, 32, 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Label x:Name="lblChallengeRating" Grid.Column="0" FontSize="15" FontAttributes="Bold" TextColor="#F4F7FB" HorizontalOptions="StartAndExpand" VerticalOptions="Center">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <FormattedString.Spans>
                                                <Span Text="CR: "/>
                                                <Span Text="{Binding Fraction}"/>
                                            </FormattedString.Spans>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                                <Grid Grid.Column="1" RowSpacing="0" VerticalOptions="Center">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="26"/>
                                        <RowDefinition Height="18"/>
                                    </Grid.RowDefinitions>
                                    <Label x:Name="lblName" Text="{Binding Name}" Grid.Row="0" FontSize="20" FontAttributes="Bold" TextColor="#F4F7FB"/>
                                    <Grid Grid.Row="1" VerticalOptions="Center">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="4"/>
                                            <ColumnDefinition Width="60"/>
                                        </Grid.ColumnDefinitions>
                                        <Label x:Name="lblArmorClass" Grid.Column="0" FontSize="14" FontAttributes="Bold" TextColor="#8999A6">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <FormattedString.Spans>
                                                        <Span Text="AC: "/>
                                                        <Span Text="{Binding ArmorClass}"/>
                                                    </FormattedString.Spans>
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                        <!--Since I can't reach Names within a listview I think it was the easiest to put it withing the android solution and put it straight in the source-->
                                        <Image x:Name="imgIconDot" Source="dotIconRed.png" Grid.Column="1" VerticalOptions="Center" HorizontalOptions="Center"/>
                                        <Label x:Name="lblHitPoints" Grid.Column="2" FontSize="14" FontAttributes="Bold" TextColor="#8999A6" Margin="8, 0, 0, 0">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <FormattedString.Spans>
                                                        <Span Text="HP: "/>
                                                        <Span Text="{Binding HitPoints}"/>
                                                    </FormattedString.Spans>
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <!--SORT MENU (POP UP)-->
            <ContentView Grid.RowSpan="6" x:Name="popSortBy" IsVisible="false" >
                <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                    <StackLayout Orientation="Vertical" WidthRequest="300" BackgroundColor="#26282A">
                        <Grid RowSpacing="16" BackgroundColor="#26282A" Padding="0, 0, 0, 16">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="24"/>
                                <RowDefinition Height="24"/>
                                <RowDefinition Height="24"/>
                                <RowDefinition Height="24"/>
                                <RowDefinition Height="24"/>
                                <RowDefinition Height="24"/>
                                <RowDefinition Height="24"/>
                                <RowDefinition Height="24"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                            </Grid.RowDefinitions>
                            <Label Grid.Row="1" Text="Sort Monsters By:" TextColor="#F4F7FB" FontSize="16" FontAttributes="Bold" VerticalOptions="Center" Margin="16, 0"/>
                            <!--need to find a way to change the color of these radio buttons, sicne rn they're just the default black with pink-->
                            <RadioButton x:Name="rbtName" Grid.Row="2" Content=" Name" TextColor="#F4F7FB" Margin="8, 0, 0, 0"/>
                            <RadioButton x:Name="rbtType" Grid.Row="3" Content=" Type" TextColor="#F4F7FB" Margin="8, 0, 0, 0"/>
                            <RadioButton x:Name="rbtChallenge" Grid.Row="4" Content=" Challenge" TextColor="#F4F7FB" Margin="8, 0, 0, 0"/>
                            <RadioButton x:Name="rbtSize" Grid.Row="5" Content=" Size" TextColor="#F4F7FB" Margin="8, 0, 0, 0"/>
                            <RadioButton x:Name="rbtAlignment" Grid.Row="6" Content=" Alignment" TextColor="#F4F7FB" Margin="8, 0, 0, 0"/>
                            <RadioButton x:Name="rbtArmorClass" Grid.Row="7" Content=" Armor Class" TextColor="#F4F7FB" Margin="8, 0, 0, 0"/>
                            <RadioButton x:Name="rbtAverageHitPoints" Grid.Row="8" Content=" Average HP" TextColor="#F4F7FB" Margin="8, 0, 0, 0"/>
                            <RadioButton x:Name="rbtLegendary" Grid.Row="9" Content=" Legendary" TextColor="#F4F7FB" Margin="8, 0, 0, 0"/>
                            <Grid Grid.Row="10" ColumnSpacing="0" HorizontalOptions="FillAndExpand" VerticalOptions="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Button x:Name="btnLowToHigh" Grid.Column="0" Text="A - Z" FontSize="16" FontAttributes="Bold" TextColor="#F4F7FB" BorderWidth="1" BorderColor="#E40712" BackgroundColor="#E40712" HorizontalOptions="FillAndExpand" Margin="16, 0, -1, 0" Clicked="btnLowToHighClicked"/>
                                <Button x:Name="btnHighToLow" Grid.Column="1" Text="Z - A" FontSize="16" FontAttributes="Bold" TextColor="#F4F7FB" BorderWidth="1" BorderColor="#E40712" BackgroundColor="Transparent" HorizontalOptions="FillAndExpand" Margin="-1, 0, 16, 0" Clicked="btnHighToLowClicked"/>
                            </Grid>
                            <Grid Grid.Row="11" ColumnSpacing="0" HorizontalOptions="FillAndExpand" VerticalOptions="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Button x:Name="btnCancel" Grid.Column="0" Text="Cancel" FontSize="16" FontAttributes="Bold" TextColor="#E40712" BackgroundColor="Transparent" HorizontalOptions="StartAndExpand" Margin="8, 0, 0, 0" Clicked="btnCancelClicked"/>
                                <Button x:Name="btnConfirm" Grid.Column="1" Text="Confirm" FontSize="16" FontAttributes="Bold" TextColor="#E40712" BackgroundColor="Transparent" HorizontalOptions="EndAndExpand" Margin="0, 0, 8, 0" Clicked="btnConfirmClicked"/>
                            </Grid>
                        </Grid>
                    </StackLayout>
                </StackLayout>
            </ContentView>
            <!--FILTER MENU (POP UP) (nice to have: see how much filters you have applied and where and more filter options)-->
            <Grid Grid.RowSpan="6" RowSpacing="0" x:Name="popFilterBy" IsVisible="False">
                <Grid.RowDefinitions>
                    <RowDefinition Height="64"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <!--NAV BAR-->
                <Grid Grid.Row="0" ColumnSpacing="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="24"/>
                        <ColumnDefinition Width="24"/>
                        <ColumnDefinition />
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="24"/>
                    </Grid.ColumnDefinitions>
                    <BoxView BackgroundColor="#090809" Grid.ColumnSpan ="5" />
                    <Image x:Name="btnCloseFilter" Grid.Column="1" VerticalOptions="Center" HorizontalOptions="Center"/>
                    <Label Text="Filter Monsters" Grid.Column="2" TextColor="#F4F7FB" FontSize="20" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="StartAndExpand" Margin="24, 0, 0, 0"/>
                    <Button x:Name="btnClearAllFilters" Text="Clear all" TextColor="#E40712" BackgroundColor="Transparent" Grid.Column="3" VerticalOptions="Center" HorizontalOptions="Center" Clicked="btnClearAllFiltersClicked"/>
                </Grid>
                <!--FRAMES (HARDCODED)-->
                <ScrollView x:Name="srvFilterOptions" Grid.Row ="1" Orientation="Vertical">
                    <Grid RowSpacing="0" BackgroundColor="#090809">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Frame x:Name="frmFilterType" Grid.Row="0" BackgroundColor="#090809">
                            <Grid RowSpacing="0" HorizontalOptions="FillAndExpand">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition Height="1"/>
                                </Grid.RowDefinitions>
                                <Grid ColumnSpacing="0" Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Column="0" Text="Type" FontSize="16" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="Start" TextColor="#F4F7FB"/>
                                    <Label Grid.Column="1" Text=">" TextTransform="Uppercase" FontAttributes="Bold" VerticalOptions="Center"  HorizontalOptions="EndAndExpand" TextColor="#8999A6"/>
                                </Grid>
                                <BoxView Grid.Row="1" BackgroundColor="#293742" HeightRequest="1" VerticalOptions="Center"/>
                            </Grid>
                        </Frame>
                        <Frame x:Name="frmFilterChallenge" Grid.Row="1" BackgroundColor="#090809">
                            <Grid ColumnSpacing="0" HorizontalOptions="FillAndExpand">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition Height="1"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Column="0" Text="Challenge" FontSize="16" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="Start" TextColor="#F4F7FB"/>
                                    <Label Grid.Column="1" Text=">" TextTransform="Uppercase" FontAttributes="Bold" VerticalOptions="Center"  HorizontalOptions="EndAndExpand" TextColor="#8999A6"/>
                                </Grid>
                                <BoxView Grid.Row="1" BackgroundColor="#293742" HeightRequest="1" VerticalOptions="Center"/>
                            </Grid>
                        </Frame>
                        <Frame x:Name="frmFilterSize" Grid.Row="2" BackgroundColor="#090809">
                            <Grid ColumnSpacing="0" HorizontalOptions="FillAndExpand">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition Height="1"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="24"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Column="0" Text="Size" FontSize="16" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="StartAndExpand" TextColor="#F4F7FB"/>
                                    <Label Grid.Column="1" Text=">" TextTransform="Uppercase" FontAttributes="Bold" VerticalOptions="Center"  HorizontalOptions="EndAndExpand" TextColor="#8999A6"/>
                                </Grid>
                                <BoxView Grid.Row="1" BackgroundColor="#293742" HeightRequest="1" VerticalOptions="Center"/>
                            </Grid>
                        </Frame>
                        <Frame x:Name="frmFilterAlignment" Grid.Row="3" BackgroundColor="#090809">
                            <Grid ColumnSpacing="0" HorizontalOptions="FillAndExpand">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition Height="1"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Column="0" Text="Alignment" FontSize="16" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="Start" TextColor="#F4F7FB"/>
                                    <Label Grid.Column="1" Text=">" TextTransform="Uppercase" FontAttributes="Bold" VerticalOptions="Center"  HorizontalOptions="EndAndExpand" TextColor="#8999A6"/>
                                </Grid>
                                <BoxView Grid.Row="1" BackgroundColor="#293742" HeightRequest="1" VerticalOptions="Center"/>
                            </Grid>
                        </Frame>
                        <Frame x:Name="frmFilterArmorClass" Grid.Row="4" BackgroundColor="#090809">
                            <Grid ColumnSpacing="0" HorizontalOptions="FillAndExpand">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition Height="1"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Column="0" Text="Armor Class" FontSize="16" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="Start" TextColor="#F4F7FB"/>
                                    <Label Grid.Column="1" Text=">" TextTransform="Uppercase" FontAttributes="Bold" VerticalOptions="Center"  HorizontalOptions="EndAndExpand" TextColor="#8999A6"/>
                                </Grid>
                                <BoxView Grid.Row="1" BackgroundColor="#293742" HeightRequest="1" VerticalOptions="Center"/>
                            </Grid>
                        </Frame>
                        <Frame x:Name="frmFilterAverageHP" Grid.Row="5" BackgroundColor="#090809">
                            <Grid ColumnSpacing="0" HorizontalOptions="FillAndExpand">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition Height="1"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Column="0" Text="Average Hitpoints" FontSize="16" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="Start" TextColor="#F4F7FB"/>
                                    <Label Grid.Column="1" Text=">" TextTransform="Uppercase" FontAttributes="Bold" VerticalOptions="Center"  HorizontalOptions="EndAndExpand" TextColor="#8999A6"/>
                                </Grid>
                                <BoxView Grid.Row="1" BackgroundColor="#293742" HeightRequest="1" VerticalOptions="Center"/>
                            </Grid>
                        </Frame>
                        <Frame x:Name="frmFilterLegendary" Grid.Row="6" BackgroundColor="#090809">
                            <Grid ColumnSpacing="0" HorizontalOptions="FillAndExpand">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition Height="1"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Column="0" Text="Legendary" FontSize="16" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="Start" TextColor="#F4F7FB"/>
                                    <Label Grid.Column="1" Text=">" TextTransform="Uppercase" FontAttributes="Bold" VerticalOptions="Center"  HorizontalOptions="EndAndExpand" TextColor="#8999A6"/>
                                </Grid>
                                <!--<BoxView Grid.Row="1" BackgroundColor="#293742" HeightRequest="1" VerticalOptions="Center"/>-->
                            </Grid>
                        </Frame>
                    </Grid>
                </ScrollView>
            </Grid>
            <!--FILTER SUBOPTIONS PAGE (POP UP)-->
            <Grid Grid.RowSpan="6" RowSpacing="16" x:Name="popFilterOptions" BackgroundColor="#090809" IsVisible="False">
                <Grid.RowDefinitions>
                    <RowDefinition Height="64"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <!--NAV BAR-->
                <Grid Grid.Row="0" ColumnSpacing="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="24"/>
                        <ColumnDefinition Width="24"/>
                        <ColumnDefinition />
                        <ColumnDefinition Width="24"/>
                        <ColumnDefinition Width="24"/>
                    </Grid.ColumnDefinitions>
                    <BoxView BackgroundColor="#090809" Grid.ColumnSpan ="5" />
                    <Image x:Name="btnCloseFilterOptions" Grid.Column="1" VerticalOptions="Center" HorizontalOptions="Center"/>
                    <Label x:Name="lblSelectedFilterOption" Text="Selected Option" Grid.Column="2" TextColor="#F4F7FB" FontSize="20" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="StartAndExpand" Margin="24, 0, 0, 0"/>
                    <!--<Button x:Name="btnClearAll" Text="Clear all" TextTransform="Lowercase" TextColor="#E40712" BackgroundColor="Transparent" Grid.Column="3" VerticalOptions="Center" HorizontalOptions="Center"/>-->
                </Grid>
                <!--FILTER SUBOPTIONS (DYNAMICALLY GENERATED)-->
                <ListView x:Name="lvwFilterCheckboxes" Grid.Row="1" IsVisible="False">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid ColumnSpacing="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="24"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="24"/>
                                        <ColumnDefinition Width="24"/>
                                    </Grid.ColumnDefinitions>
                                    <Label x:Name="lblSubOptionName" Grid.Column="1" Text="{Binding Name}" TextColor="#F4F7FB" FontSize="16" VerticalOptions="Center"  HorizontalOptions="StartAndExpand" />
                                    <CheckBox x:Name="cbxSubOption" Grid.Column="2" Color="#E40712" IsChecked="{Binding Status, Mode=TwoWay}" VerticalOptions="Center" ScaleX="1.25" ScaleY="1.25"/>
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <ListView x:Name="lvwFilterEntries" RowHeight="64" Grid.Row="1" IsVisible="False">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid ColumnSpacing="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="24"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="75"/>
                                        <ColumnDefinition Width="24"/>
                                    </Grid.ColumnDefinitions>
                                    <Label x:Name="lblSubOptionName" Grid.Column="1" Text="{Binding Name}" TextColor="#F4F7FB" FontSize="16" VerticalOptions="Center"  HorizontalOptions="StartAndExpand"/>
                                    <BoxView Grid.Column="2" BackgroundColor="#293742" CornerRadius="5" HeightRequest="40" VerticalOptions="Center"/>
                                    <Entry x:Name="entSubOption" Grid.Column="2" Text="{Binding Limit, Mode=TwoWay}" TextColor="#F4F7FB" HorizontalTextAlignment="Center" FontSize="16" VerticalOptions="Center"  HorizontalOptions="FillAndExpand"/>
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>